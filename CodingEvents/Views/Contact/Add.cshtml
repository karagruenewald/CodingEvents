@model CodingEvents.ViewModels.AddContactViewModel


<h1>Add New Contact</h1>
<form method="post" asp-controller="Contact" asp-action="Add">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" />
        <span asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProfileImage">Profile Picture</label>
        <div class="custom-file">
            <input asp-for="ProfileImage" class="custom-file-input" id="customFile" />
            <label class="custom-file-label" for="customeFile">Choose file</label>
            <span asp-validation-for="ProfileImage"></span>


        </div>




    </div>




    <input type="submit" value="Add Contact" />








</form>