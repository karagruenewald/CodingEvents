@{
}

@using CodingEvents.Models
@model List<Event>

<h2>Events Lists</h2>
<a style ="color: red; text-decoration: underline" class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Add">Add Events</a>
<a style="color: red; text-decoration: underline" class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Delete">Delete Events</a>
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Event</th>
        <th>Description</th>
        <th>Location</th>
        <th>Number of Attendees</th>
        <th>Category</th>
        <th>Contact</th>
        <th>Edit</th>
    </tr>

    @foreach (var evt in Model)
    {
    <tr>
        <td>@evt.Id</td>
        <td><a asp-controller ="Events" asp-action ="Detail" asp-route-id="@evt.Id">@evt.Name</a></td>
        <td>@evt.Description</td>
        <td>@evt.Location</td>
        <td>@evt.NumOfAttendees</td>
        <td>@evt.Category.Name</td>
        <td>@evt.Contact.Name</td>
        <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">Edit Event</a></td>

    </tr>
    }

</table>