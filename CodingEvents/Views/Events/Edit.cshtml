@{
}
<h3>@ViewBag.title</h3>
<br />
<form method="post" action="/events/edit"> @*action method here bc we don't want to submit at it's route of /events/edit/{eventId}*@
    <label>
        Event Name:
        <input type="hidden" name="eventId" value="@ViewBag.events.Id" /> @*allows us to update/use the event at this id without the user being able to change it*@
        <input name="name" type="text" value="@ViewBag.events.Name"/>
    </label>
    <label>
        Event Description:
        <input name="description" type="text" value="@ViewBag.events.Description"/>
    </label>
    <input type="submit" value="Edit Event" />
</form>