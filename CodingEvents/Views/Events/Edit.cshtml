<h3>Edit Event</h3>
<form method="post" action="/events/edit">
    <div>
        <label>
            Name
            <input name="name" type="text" value="@ViewBag.events.Name" />
        </label>

    </div>

    <div class="form-group>">
        <label>
            Description
            <input name="description" type="text" value="@ViewBag.events.Description" />
        </label>
    </div>

    <div class="form-group>">
        <label>
            Contact Email
            <input name="email" type="text" value="@ViewBag.events.ContactEmail" />
        </label>
    </div>


    <div>
        <input type="hidden" value="@ViewBag.events.Id" name="eventId">
    </div>

    <input type="submit" value="Edit Event" />
</form>