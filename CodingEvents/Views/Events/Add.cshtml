@using CodingEvents.ViewModels

@model AddEventViewModel

<h3>Add Event</h3>
<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group>"
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" />
        <span asp-validation-for="Name"></span> @*if invalid, will display the error message created in View Model for name*@
    </div>

    <div class="form-group>">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" />
        <span asp-validation-for="Description"></span>

    </div>

    <div class="form-group>">
        <label asp-for="ContactEmail"></label>
        <input asp-for="ContactEmail" type="text" />
        <span asp-validation-for="ContactEmail"></span>

    </div>

    <div class="form-group>">
        <label asp-for="Location"></label>
        <input asp-for="Location" type="text" />
        <span asp-validation-for="Location"></span>

    </div>

    <div class="form-group>">
        <label asp-for="NumOfAttendees"></label>
        <input asp-for="NumOfAttendees" type="text" />
        <span asp-validation-for="NumOfAttendees"></span>

    </div>
    <div class="form-group>">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Model.EventTypes"></select>
        

    </div>

    <input type="submit" value="Add Event" />
</form>
